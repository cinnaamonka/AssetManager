<Window x:Class="AssetManager.Views.ImageViewerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AssetManager.Views"
        xmlns:vm="clr-namespace:AssetManager.ViewModels"
        mc:Ignorable="d"
        Title="ImageViewerWindow" Height="450" Width="800">
    
    <Window.DataContext>
        <vm:ImageViewerVM/>
    </Window.DataContext>
    
    <Grid>
        <Image Source="{Binding ImagePath}" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Button Content="Close" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10"
                Background="Transparent" Foreground="White" FontSize="16" 
                Command="{Binding CloseCommand}"/>
    </Grid>
</Window>
