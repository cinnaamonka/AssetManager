<Page x:Class="AssetManager.Views.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AssetManager.Views"
      xmlns:vm="clr-namespace:AssetManager.ViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Page.DataContext>
        <vm:AssetViewModel />
    </Page.DataContext>
    
    <Grid>

        <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                 Width="640" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10"/>

        <Button Content="Search" Command="{Binding SearchCommand}" 
                Width="100" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="660,10,0,0"/>

        <ListView ItemsSource="{Binding FilteredAssets}" DisplayMemberPath="Name"
                  Width="750" Height="300" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,50,0,0"/>

    </Grid>
</Page>
