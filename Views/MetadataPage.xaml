<Page x:Class="AssetManager.Views.MetadataPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AssetManager.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Metadata">

    <StackPanel>
        <TextBlock Text="Asset Metadata" FontSize="20" Margin="10"/>

        <TextBlock Text="Name:" />
        <TextBox Text="{Binding SelectedAsset.Metadata.Name}" />

        <TextBlock Text="File Type:" />
        <TextBox Text="{Binding SelectedAsset.Metadata.FileType}" />

        <TextBlock Text="Custom Fields:" />
        <!-- Optional: A dynamic list to add/edit custom fields -->
    </StackPanel>

</Page>
