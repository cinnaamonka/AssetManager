<Page x:Class="AssetManager.Views.OverviewPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AssetManager.Views"
      xmlns:vm="clr-namespace:AssetManager.ViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1400"
      Title="OverviewPage">

    <Page.DataContext>
        <vm:OverviewPageVM />
    </Page.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Orientation="Horizontal" Background="DarkSlateBlue">
            <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                     Width="640" Height="30" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10"/>
            <Button Content="Search" Command="{Binding SearchCommand}" 
                    Width="100" Height="30" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Grid.Column="0" Background="DarkSlateGray" >
            <TextBlock Text="Tag Search" Foreground="White" FontWeight="Bold" Margin="0,0,0,10"/>
            <StackPanel Margin="0,0,0,10">
                <TextBox Width="150" Margin="0,5"/>
                <TextBox Width="150" Margin="0,5"/>
            </StackPanel>
            <TextBlock Text="Recent Tags" Foreground="White" FontWeight="Bold" Margin="0,20,0,10"/>
            <ListBox>
                <ListBoxItem Content="Pinned Tags" />
                <ListBoxItem Content="Top Tags (Library)" />
                <ListBoxItem Content="Top Tags (Quest)" />
                <ListBoxItem Content="Top Tags (Session)" />
            </ListBox>
        </StackPanel>

        <ListView Grid.Row="1" Grid.Column="1" ItemsSource="{Binding FilteredAssets}"
                  SelectedItem="{Binding SelectedAsset, Mode=TwoWay}"
                  HorizontalAlignment="Left" VerticalAlignment="Top"
                  Margin="10" Width="750" Height="600"
                  Background="MidnightBlue">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="ContextMenu">
                        <Setter.Value>
                            <ContextMenu>
                                <MenuItem Header="Option 1" Command="{Binding DataContext.YourCommand, RelativeSource={RelativeSource AncestorType=ListView}}" />
                                <MenuItem Header="Option 2" Command="{Binding DataContext.AnotherCommand, RelativeSource={RelativeSource AncestorType=ListView}}" />
                            </ContextMenu>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListView.ItemContainerStyle>

            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel HorizontalAlignment="Left" />
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>

            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border Width="100" Height="100" Margin="5" BorderBrush="Gray" BorderThickness="1">
                        <Grid>
                            <TextBlock Text="{Binding FileName}" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

     
        <StackPanel Grid.Row="1" Grid.Column="2" Background="DarkSlateGray" >
            <Border BorderBrush="White" BorderThickness="1" Height="200" Margin="0,0,0,10">
                <TextBlock Text="Preview" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White"/>
            </Border>
            <TextBlock Text="Title: Entry Title" Foreground="White" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBlock Text="Description" Foreground="White" Margin="0,0,0,5"/>
            <TextBlock Text="This is the entity's description. It is multi-line." Foreground="White" TextWrapping="Wrap"/>
            <TextBlock Text="Tags" Foreground="White" FontWeight="Bold" Margin="0,10,0,5"/>
            <StackPanel Orientation="Horizontal">
                <TextBox Width="100" Margin="0,0,5,0"/>
                <Button Content="+" Width="25"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
